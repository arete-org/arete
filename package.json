{
    "name": "footnote",
    "private": true,
    "packageManager": "pnpm@10.27.0",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:web\"",
        "dev:backend": "pnpm --filter @footnote/contracts run build && pnpm exec tsx packages/backend/src/server.ts",
        "dev:web": "pnpm --filter @footnote/web dev",
        "dev:bot": "pnpm --filter @footnote/discord-bot dev",
        "start:dev": "pnpm dev",
        "start:backend": "pnpm dev:backend",
        "start:bot": "pnpm dev:bot",
        "start:prod-test": "pnpm --filter @footnote/backend build && cross-env NODE_ENV=production node server.js",
        "dev:prod-test": "concurrently \"pnpm --filter @footnote/backend build && cross-env NODE_ENV=production node server.js\" \"pnpm --filter @footnote/web dev\"",
        "build": "pnpm -r build",
        "validate-arete-tags": "node scripts/validate-arete-tags.js",
        "validate-openapi-links": "pnpm exec tsx scripts/validate-openapi-links.ts",
        "blog-sync": "node scripts/blog-sync.js",
        "pre-review": "pnpm validate-arete-tags && pnpm validate-openapi-links && pnpm type-check && pnpm lint-check",
        "type-check": "pnpm exec tsc --noEmit",
        "lint-check": "pnpm exec eslint packages/"
    },
    "devDependencies": {
        "@eslint/js": "catalog:",
        "@swc/core": "catalog:",
        "@swc/helpers": "catalog:",
        "@types/better-sqlite3": "catalog:",
        "@types/js-yaml": "catalog:",
        "@types/mime-types": "catalog:",
        "@types/node": "catalog:",
        "@types/react": "catalog:",
        "@types/react-dom": "catalog:",
        "@types/ws": "catalog:",
        "@typescript-eslint/eslint-plugin": "catalog:",
        "@typescript-eslint/parser": "catalog:",
        "concurrently": "catalog:",
        "cross-env": "catalog:",
        "csstype": "catalog:",
        "dependency-cruiser": "^17.3.6",
        "eslint": "catalog:",
        "eslint-config-prettier": "catalog:",
        "eslint-plugin-react-hooks": "catalog:",
        "prettier": "catalog:",
        "tsx": "catalog:",
        "typescript": "catalog:"
    },
    "pnpm": {
        "overrides": {
            "@types/react": "18.3.27",
            "@types/react-dom": "18.3.7",
            "csstype": "3.2.3"
        },
        "onlyBuiltDependencies": [
            "better-sqlite3"
        ]
    },
    "dependencies": {
        "dotenv": "catalog:",
        "jsonwebtoken": "catalog:"
    }
}
