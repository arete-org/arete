{
    "name": "arete",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start:dev": "node server.js & npm run dev -w @arete/web",
        "start:backend": "node server.js",
        "build": "npm run build --workspaces",
        "validate-arete-tags": "node scripts/validate-arete-tags.js",
        "pre-review": "npm run validate-arete-tags && npm run type-check && npm run lint-check",
        "type-check": "pnpm tsc --noEmit",
        "lint-check": "pnpm eslint packages/",
        "ethics-check": "pnpm tsx -e \"console.log('Ethics audit: Check all @arete-ethics tags are current')\"",
        "risk-check": "pnpm tsx -e \"console.log('Risk audit: Check all @arete-risk tags are current')\"",
        "full-pre-review": "npm run pre-review && npm run ethics-check && npm run risk-check"
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@swc/core": "^1.13.5",
        "@swc/helpers": "^0.5.17",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^24.5.1",
        "@types/winston": "^2.4.4",
        "@types/ws": "^8.5.14",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "concurrently": "^8.0.1",
        "eslint": "^9.38.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "vite": "^7.1.10"
    },
    "dependencies": {
        "@ai-sdk/openai": "^2.0.8",
        "@arete/shared": "^1.0.0",
        "@assistant-ui/react-ai-sdk": "^0.11.1",
        "@discordjs/voice": "^0.19.0",
        "@modelcontextprotocol/sdk": "^1.18.2",
        "@pinecone-database/pinecone": "^6.1.2",
        "@tailwindcss/cli": "^4.1.11",
        "ai": "^5.0.8",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "crypto": "^1.0.1",
        "dotenv": "^16.4.5",
        "js-yaml": "^4.1.0",
        "langchain": "^0.3.34",
        "lucide-react": "^0.539.0",
        "opusscript": "^0.0.8",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.11",
        "tw-animate-css": "^1.3.6",
        "websockets": "^0.2.0"
    }
}
