{
    "snippets": {
        "footnote-risk-header": {
            "prefix": "footnote-risk",
            "body": [
                "/**",
                " * @footnote-module: ${1:Module name}",
                " * @footnote-risk: ${2|critical,high,moderate,low|}",
                " * @footnote-ethics: ${3|critical,high,moderate,low|}",
                " * @footnote-scope: ${4:Scope of change}",
                " * @description",
                " * ${5:Summary of functionality and rationale}",
                " * ",
                " * @impact",
                " * Risk: ${6:Risk impact details}",
                " * Ethics: ${7:Ethics impact details}",
                " */"
            ],
            "description": "Footnote risk/ethics header template"
        },
        "footnote-logger": {
            "prefix": "footnote-log",
            "body": [
                "logger.${1|debug,info,warn,error|}('${2:message}', { ${3:context} });"
            ],
            "description": "Footnote structured logging"
        },
        "footnote-cost-tracking": {
            "prefix": "footnote-cost",
            "body": [
                "ChannelContextManager.recordLLMUsage(${1:tokens}, ${2:cost});"
            ],
            "description": "Footnote cost tracking"
        },
        "footnote-error-handling": {
            "prefix": "footnote-try",
            "body": [
                "try {",
                "  ${1:// risky operation}",
                "} catch (error) {",
                "  logger.error('${2:Operation failed}:', error);",
                "  ${3:// error handling}",
                "}"
            ],
            "description": "Footnote error handling pattern"
        },
        "footnote-interface": {
            "prefix": "footnote-interface",
            "body": [
                "export interface ${1:InterfaceName} {",
                "  ${2:property}: ${3:type};",
                "}"
            ],
            "description": "Footnote interface template"
        }
    }
}

