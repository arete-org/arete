{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "paths": {
            "@footnote/contracts": ["../contracts/src/index.ts"],
            "@footnote/contracts/*": ["../contracts/src/*"]
        },
        "types": ["node"],
        "noEmitOnError": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
