{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@arete/contracts": ["../contracts/dist/index.d.ts"],
            "@arete/contracts/ethics-core": [
                "../contracts/dist/ethics-core/index.d.ts"
            ],
            "@arete/contracts/web/schemas": [
                "../contracts/dist/web/schemas.d.ts"
            ],
            "@arete/contracts/*": ["../contracts/dist/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
