{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "baseUrl": "./src",
        "noEmit": true,
        "paths": {
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@arete/contracts/ethics-core": [
                "../../contracts/src/ethics-core/index.ts"
            ],
            "@styles/*": ["styles/*"],
            "@theme": ["theme"],
            "@types/*": ["types/*"]
        }
    },
    "include": ["src", "src/types"],
    "references": [{ "path": "../contracts" }]
}
